{
   "compileOnSave": true,
   "compilerOptions": {
      "module": "None",
      "target": "es5",
      "noImplicitAny": false,
      "sourceMap": true,

      "alwaysStrict": true,
      "watch": true,
      "outDir": "./built/",

      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "removeComments": false
   },
   "include": [
      "src/**/*"
   ],
   "exclude": [
      "node_modules",
      "**/*.spec.ts"
   ]

}
